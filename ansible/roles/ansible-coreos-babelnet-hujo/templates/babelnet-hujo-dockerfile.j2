FROM debian:jessie 
MAINTAINER Pablo Torres <pablo.torres.t@gmail.com>

RUN apt-get clean
RUN apt-get update -y
RUN apt-get install -y default-jdk maven git subversion wget sed

RUN git clone https://ptorres:sanjayatheboss@gitlab.insight-centre.org/hujo/babelnetproject.git
CMD /bin/bash -c 'cd babelnetproject && ./install-dep.sh'

EXPOSE 8080

CMD /bin/bash -c 'cd babelnetproject && mvn jboss-as:run -Dmaven.test.skip=true'

